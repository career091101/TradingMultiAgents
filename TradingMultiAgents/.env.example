# TradingAgents Environment Configuration
# Copy this file to .env and update with your values

# Required API Keys
FINNHUB_API_KEY=your_finnhub_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys (for additional LLM providers)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Reddit API (for social media analysis)
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=TradingAgents/1.0

# Data and Cache Directories
TRADINGAGENTS_DATA_DIR=./data
TRADINGAGENTS_RESULTS_DIR=./results
TRADINGAGENTS_CACHE_DIR=./cache

# WebUI Authentication (change these in production!)
WEBUI_ADMIN_PASSWORD=admin123
WEBUI_PASSWORD_SALT=change_this_salt_in_production

# WebUI Configuration
WEBUI_PORT=8501
WEBUI_HOST=localhost

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Development/Production Mode
ENVIRONMENT=development

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Resource Limits
MAX_UPLOAD_SIZE_MB=200
SESSION_TIMEOUT_HOURS=8

# Database Configuration (if using database)
DATABASE_URL=sqlite:///./trading_agents.db

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Security Settings
ENABLE_CORS=true
ENABLE_XSRF_PROTECTION=true
SHOW_ERROR_DETAILS=false

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
CONNECTION_POOL_SIZE=10

# Backtest Configuration
BACKTEST_START_CAPITAL=30000.0
BACKTEST_COMMISSION_RATE=0.001
BACKTEST_DEFAULT_POSITION_SIZE=0.1